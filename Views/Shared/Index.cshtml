@* @using dojoSurveyWithModel.Models; *@
@model Survey
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dojo Survey</title>
</head>
<body>
        <form  style="margin:50px" asp-action="Checking" asp-controller="Result" method="post">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name"></span>
            <input class="form-control" type="text" asp-for="Name">

            <label asp-for="Location"></label>
            <span asp-validation-for="Location"></span>
            <input class="form-control" asp-for="Location">

            <label asp-for="Language"></label>
            <span asp-validation-for="Language"></span>
            <select class="form-control" asp-for="Language">
                <option  value="">Select one</option>
                <option value="c#">C#</option>
                <option value="python">Python</option>
                <option value="html">HTML</option>
                <option value="css">CSS</option>
            </select>
            <div>
                <label style="margin-top:10px" asp-for="Comment"></label>
                <span asp-validation-for="Comment"></span>
                <textarea class="form-control"asp-for="Comment" id="" cols="30" rows="10"></textarea>
            </div>
            
            <button style="margin:5px" type="submit" class="btn btn-primary">Submit</button>

        </form>


</body>
</html>